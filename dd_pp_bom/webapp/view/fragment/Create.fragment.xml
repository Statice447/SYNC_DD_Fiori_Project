<core:FragmentDefinition
    xmlns:smartfield="sap.ui.comp.smartfield"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    <Dialog id="createDialog" title="BOM 생성 화면">
        <content>
            <HBox >
                <VBox class="sapUiSmallMargin" id="formContainer">
                    <f:SimpleForm
                        id="BomHeaderinfo"
                        editable="true"
                        layout="ColumnLayout"
                        width="20rem"
                        columnsM="2"
                        columnsL="2"
                        columnsXL="2">
                        <Toolbar >
                            <Title text="완제품 정보"></Title>
                            <ToolbarSpacer/>
                            <Button type="Emphasized" text="리스트 추가" press="onItemadd"/>
                        </Toolbar>
                        <f:content>
                            <Label text="품목코드"/>
                            <ComboBox
                                id="idheadGdcode"
                                name="Gdcode"
                                showSecondaryValues="true"
                                selectionChange=".onSelectionChange"
                                items="{
                                            path: '/MtmasterSet',
                                            templateShareable: true
										}">
                                <core:ListItem key="{Gdcode}" text="{Gdcode}" additionalText="{Gdname}"/>
                            </ComboBox>
                            <Label text="품목명"/>
                            <ComboBox
                                id="idheadGdname"
                                name="headGdname"
                                editable="false"
                                showSecondaryValues="true"
                                selectionChange=".onSelectionChange"
                                items="{
                                            path: '/MtmasterSet',
                                            templateShareable: true
										}">
                                <core:ListItem key="{Gdname}" text="{Gdname}" additionalText="{Gdcode}"/>
                            </ComboBox>
                        </f:content>
                    </f:SimpleForm>
                    <f:SimpleForm
                        id="BomIteminfo"
                        editable="true"
                        layout="ColumnLayout"
                        width="20rem"
                        columnsM="2"
                        columnsL="2"
                        columnsXL="2">
                        <Toolbar >
                            <Title text="원자재,부자재 정보"></Title>
                        </Toolbar>
                        <f:content>
                            <Label text="품목코드"/>
                            <ComboBox
                                id="iditemGdcode"
                                name="itemGdcode"
                                showSecondaryValues="true"
                                selectionChange=".onSelectionChange"
                                items="{
                                            path: '/MtmasterSet',
                                            templateShareable: true,
                                            sorter: {
                                                path: 'Gdcode',
                                                descending: false
                                            }
										}">
                                <core:ListItem key="{Gdcode}" text="{Gdcode}" additionalText="{Gdname}"/>
                            </ComboBox>
                            <Label text="품목명"/>
                            <ComboBox
                                id="iditemGdname"
                                name="itemGdname"
                                editable="false"
                                showSecondaryValues="true"
                                selectionChange=".onSelectionChange"
                                items="{
                                            path: '/MtmasterSet',
                                            templateShareable: true,
                                            sorter: {
                                                path: 'Gdcode',
                                                descending: false
                                            }
										}">
                                <core:ListItem key="{Gdname}" text="{Gdname}" additionalText="{Gdcode}"/>
                            </ComboBox>
                            <Label text="수량"/>
                            <Input id="iditemQuan" width="auto" value=""/>
                            <Input id="iditemUnit" width="3rem" value="EA" editable="false" />

                        </f:content>
                    </f:SimpleForm>
                </VBox>
                <VBox width="50rem">
                    <Table id="idaddTable" items="{addbom>/BOM_ISet}" inset="false">
                        <headerToolbar>
                            <OverflowToolbar>
                                <content>
                                    <Title id="idtabletitle" text="추가된 리스트" level="H2"/>
                                    <!-- <ToolbarSpacer/> <Button text="클리어"></Button> -->
                                </content>
                            </OverflowToolbar>
                        </headerToolbar>
                        <columns >
                            <Column width="4rem" hAlign="Center">
                                <Text text="품목코드"/>
                            </Column>
                            <Column width="10rem" minScreenWidth="Tablet" demandPopin="true">
                                <Text text="품목명"/>
                            </Column>
                            <Column width="5rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                <Text text="품목구분"/>
                            </Column>
                            <Column width="3rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Right">
                                <Text text="수량"/>
                            </Column>
                            <Column width="3rem" minScreenWidth="Tablet" demandPopin="true">
                                <Text text="단위"/>
                            </Column>
                            <Column width="3rem" minScreenWidth="Tablet" demandPopin="true" hAlign="Center">
                                <Text text="삭제"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem press=".onListItemPress">
                                <cells>
                                    <Text text="{addbom>GdcodeM}"/>
                                    <Text text="{addbom>GdnameM}"/>
                                    <Text text="{addbom>MtcodeM}"/>
                                    <Text text="{addbom>Quan}"/>
                                    <Text text="{addbom>Unit}"/>
                                    <core:Icon src="sap-icon://decline" color="#0054FF" press="onDecline"></core:Icon>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
            </HBox>
            <Toolbar>
                <ToolbarSpacer/>
                <Button type="Success" text="확인" press="onCreate"/>
                <Button type="Negative" text="취소" press="onClose"/>
            </Toolbar>

        </content>

    </Dialog>
</core:FragmentDefinition>